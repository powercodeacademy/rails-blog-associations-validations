<p id="notice"><%= notice %></p>

<p><strong>Name:</strong> <%= @post.name %></p>
<p><strong>Content:</strong> <%= @post.content %></p>

<p><strong>Tags:</strong></p>
<ul>
  <% @post.tags.each do |tag| %>
    <li><%= tag.name %></li>
  <% end %>
</ul>
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
